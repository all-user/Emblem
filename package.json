{
  "name": "@all-user/olympic2020",
  "version": "0.0.1",
  "description": "generate olympic emblem",
  "main": "index.js",
  "scripts": {
    "test": "testem ci -P 4",
    "esdoc": "esdoc -c esdoc.json",
    "build:js": "browserify -t babelify ./src/js/index.js -d | exorcist ./src/bundle.js.map > ./src/bundle.js",
    "demo:all_char": "browserify -t babelify ./src/js/demo/all_char_animate.js -o ./src/all_char_bundle.js",
    "demo:str_anime": "browserify -t babelify ./src/js/demo/string_animate.js -o ./src/string_anime_bundle.js",
    "demo": "npm run demo:all_char | npm run demo:str_anime | npm run release:demo",
    "demo:watch": "watch \"npm run demo\" ./src/js/demo/",
    "watch:js": "watchify -v -t babelify ./src/js/index.js -o \"exorcist ./src/bundle.js.map > ./src/bundle.js\" -d",
    "release:js": "browserify -t babelify ./src/js/index.js | uglifyjs > ./dist/bundle.js",
    "release:demo": "copyfiles -f ./src/*_bundle.js ./dist",
    "build:css": "stylus -c ./src/stylus/index.styl -o ./src/bundle.css -m",
    "watch:css": "watch \"npm run build:css\" ./src/stylus/",
    "release:css": "stylus -c ./src/stylus/index.styl -o ./dist/bundle.css",
    "dogfood": "stylus -c ./dogfood/doc.styl -o ./dogfood/bundle.css -m",
    "server": "browser-sync start --server src",
    "watch": "npm run watch:css & npm run watch:js & npm run server",
    "start": "npm run watch",
    "release:clean": "trash ./dist",
    "release:mkdir": "mkdirp ./dist && npm run release:clean && mkdirp ./dist",
    "release:copydirs": "ncp ./src/fonts ./dist/fonts",
    "release:copyfiles": "copyfiles -f ./src/*.html ./dist",
    "release:copy": "npm run release:copyfiles && npm run release:copydirs",
    "release": "npm run release:mkdir && npm run release:copy && npm run release:css && npm run release:js && npm run release:demo"
  },
  "author": "Keita Okamoto <ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "append-css": "^0.1.6",
    "babelify": "^6.1.3",
    "browser-sync": "*",
    "browserify": "^11.0.1",
    "copyfiles": "*",
    "es6-promise": "^2.3.0",
    "esdoc": "^0.2.0",
    "espower-babel": "^3.2.0",
    "espowerify": "^0.10.1",
    "exorcist": "^0.4.0",
    "mkdirp": "*",
    "mocha": "^2.2.5",
    "ncp": "*",
    "power-assert": "^0.11.0",
    "stylus": "^0.52.0",
    "testem": "*",
    "trash": "*",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
