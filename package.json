{
  "name": "olympic_emblem",
  "version": "0.0.1",
  "description": "generate olympic  emblem ",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:espower-babel/guess test/**/*.test.js",
    "esdoc": "esdoc -c esdoc.json",
    "build:js": "browserify -t babelify ./src/js/index.js -d | exorcist ./src/bundle.js.map > ./src/bundle.js",
    "watch:js": "watchify -v -t babelify ./src/js/index.js -o \"exorcist ./src/bundle.js.map > ./src/bundle.js\" -d",
    "release:js": "browserify -t babelify ./src/js/index.js | uglifyjs > ./dist/bundle.js",
    "build:css": "stylus -c ./src/stylus/index.styl -o ./src/bundle.css -m",
    "watch:css": "watch \"npm run build:css\" ./src/stylus/",
    "release:css": "stylus -c ./src/stylus/index.styl -o ./dist/bundle.css",
    "dogfood": "stylus -c ./dogfood/doc.styl -o ./dogfood/bundle.css -m",
    "server": "browser-sync start --server src",
    "watch": "npm run watch:css & npm run watch:js & npm run server",
    "start": "npm run watch",
    "release:clean": "trash ./dist",
    "release:mkdir": "mkdirp ./dist && npm run release:clean && mkdirp ./dist",
    "release:copyfiles": "copyfiles -f ./src/*.html ./dist",
    "release:copydir": "ncp ./src/fonts ./dist/fonts",
    "release:copy": "npm run release:copyfiles && npm run release:copydirs",
    "release": "npm run release:mkdir && npm run release:copy && npm run release:css && npm run release:js"
  },
  "author": "Keita Okamoto <ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "esdoc": "^0.2.0",
    "espower-babel": "^3.2.0",
    "exorcist": "^0.4.0",
    "mocha": "^2.2.5",
    "power-assert": "^0.11.0",
    "stylus": "^0.52.0",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
