{
  "name": "@all-user/Emblem",
  "version": "0.1.0",
  "description": "Generate emblem composed of 3x3 elements.",
  "main": "index.js",
  "scripts": {
    "test": "testem ci -P 4",
    "esdoc": "esdoc -c esdoc.json",
    "build:patterns:js": "babel ./src/js/patterns --optional runtime -d ./src/patterns",
    "build:patterns:css:Olympic2020": "stylus -c ./src/stylus/patterns/Olympic2020/index.styl -o ./src/patterns/Olympic2020/bundle.css -m",
    "build:patterns:css:Lines": "stylus -u nib -c ./src/stylus/patterns/Lines/index.styl -o ./src/patterns/Lines/bundle.css -m",
    "build:patterns:css": "npm run build:patterns:css:Olympic2020 & npm run build:patterns:css:Lines",
    "watch:patterns:js": "watch \"npm run build:patterns:js\" ./src/js/patterns",
    "watch:patterns:css": "watch \"npm run build:patterns:css\" ./src/stylus/patterns",
    "build:demo:common": "stylus -c ./src/stylus/demo/common.styl -o ./src/demo/common.css -m",
    "build:demo:all_char": "browserify -t [ babelify --optional runtime ] ./src/js/demo/all_char_animate.js -o ./src/demo/all_char_animate/bundle.js & stylus -c ./src/stylus/demo/all_char_animate.styl -o ./src/demo/all_char_animate/bundle.css -m",
    "build:demo:str_anime": "browserify -t [ babelify --optional runtime ] ./src/js/demo/string_animate.js -o ./src/demo/string_animate/bundle.js & stylus -c ./src/stylus/demo/string_animate.styl -o ./src/demo/string_animate/bundle.css -m",
    "build:demo:frm_txt": "browserify -t [ babelify --optional runtime ] ./src/js/demo/animate_from_input.js -o ./src/demo/animate_from_input/bundle.js & stylus -c ./src/stylus/demo/animate_from_input.styl -o ./src/demo/animate_from_input/bundle.css -m",
    "build:demo:embed": "browserify -t [ babelify --optional runtime ] ./src/js/demo/embed.js -o ./src/demo/embed/bundle.js & stylus -c ./src/stylus/demo/embed.styl -o ./src/demo/embed/bundle.css -m",
    "build:demo:embed_res": "browserify -t [ babelify --optional runtime ] ./src/js/demo/embed_response.js -o ./src/demo/embed_response/bundle.js & stylus -c ./src/stylus/demo/embed_response.styl -o ./src/demo/embed_response/bundle.css -m",
    "build:demo": "npm run build:demo:common & npm run build:demo:all_char & npm run build:demo:str_anime & npm run build:demo:frm_txt & npm run build:demo:embed & npm run build:demo:embed_res",
    "watch:demo": "watch \"npm run build:demo\" ./src/js/demo/ & watch \"npm run build:demo\" ./src/stylus/demo/",
    "build:js": "browserify -t [ babelify --optional runtime ] ./src/js/index.js -d | exorcist ./src/bundle.js.map > ./src/bundle.js",
    "watch:js": "watchify -v -t [ babelify --optional runtime ] ./src/js/index.js -o \"exorcist ./src/bundle.js.map > ./src/bundle.js\" -d",
    "release:js": "browserify -t [ babelify --optional runtime ] ./src/js/index.js | uglifyjs > ./dist/bundle.js",
    "release:demo": "ncp ./src/demo ./dist/demo",
    "release:patterns": "ncp ./src/patterns ./dist/patterns",
    "release:clean": "trash ./dist",
    "release:mkdir": "mkdirp ./dist && npm run release:clean && mkdirp ./dist",
    "release:copydirs": "ncp ./src/fonts ./dist/fonts",
    "release:copyfiles": "copyfiles -f ./src/*.html ./dist",
    "release:copy": "npm run release:copyfiles && npm run release:copydirs",
    "release": "npm run release:mkdir && npm run release:copy && npm run release:js && npm run release:demo && npm run release:patterns",
    "dogfood": "stylus -c ./dogfood/doc.styl -o ./dogfood/bundle.css -m",
    "server": "browser-sync start --server src",
    "watch": "npm run watch:js & npm run watch:demo & npm run watch:patterns:js & npm run watch:patterns:css & npm run server",
    "start": "npm run watch"
  },
  "author": "Keita Okamoto <ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "append-css": "^0.1.6",
    "babel-runtime": "^5.8.20",
    "babelify": "^6.1.3",
    "bootstrap": "^3.3.5",
    "browser-sync": "*",
    "browserify": "^11.0.1",
    "copyfiles": "*",
    "es6-promise": "^2.3.0",
    "esdoc": "^0.2.0",
    "espower-babel": "^3.2.0",
    "espowerify": "^0.10.1",
    "exorcist": "^0.4.0",
    "mkdirp": "*",
    "mocha": "^2.2.5",
    "ncp": "*",
    "nib": "^1.1.0",
    "power-assert": "^0.11.0",
    "stylus": "^0.52.0",
    "testem": "*",
    "trash": "*",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
