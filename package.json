{
  "name": "@all-user/ok-blocks",
  "version": "0.0.1",
  "description": "Generate blocks consists of 3x3 elements.",
  "main": "index.js",
  "scripts": {
    "test": "testem",
    "build:patterns:js:lines": "browserify -t [ babelify --optional runtime ] ./src/js/patterns/Lines/index.js -o ./src/patterns/Lines/index.js",
    "build:patterns:js:olympic": "browserify -t [ babelify --optional runtime ] ./src/js/patterns/Olympic2020/index.js -o ./src/patterns/Olympic2020/index.js",
    "build:patterns:css:Olympic2020": "stylus -c ./src/stylus/patterns/Olympic2020/index.styl -o ./src/patterns/Olympic2020/bundle.css -m",
    "build:patterns:css:Lines": "stylus -u nib -c ./src/stylus/patterns/Lines/index.styl -o ./src/patterns/Lines/bundle.css -m",
    "watch:patterns:js": "watch \"npm-run-all build:patterns:js:*\" ./src/js/patterns",
    "watch:patterns:css": "watch \"npm-run-all build:patterns:css:*\" ./src/stylus/patterns",
    "build:js": "browserify -t [ babelify --optional runtime ] ./src/js/index.js -d | exorcist ./src/bundle.js.map > ./src/bundle.js",
    "watch:js": "watchify -v -t [ babelify --optional runtime ] ./src/js/index.js -o \"exorcist ./src/bundle.js.map > ./src/bundle.js\" -d",
    "release:js": "browserify -t [ babelify --optional runtime ] ./src/js/index.js | uglifyjs > ./dist/bundle.js",
    "release:patterns": "cpx \"./src/patterns/**/*\" ./dist/patterns",
    "release:clean": "rimraf ./dist",
    "release:mkdir": "npm run release:clean && mkdirp ./dist",
    "release": "npm run release:mkdir && npm run release:js && npm run release:patterns",
    "watch": "npm run watch:js & npm run watch:patterns:js & npm run watch:patterns:css",
    "start": "npm run watch"
  },
  "author": "Keita Okamoto <ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "append-css": "^0.1.6",
    "babel-plugin-espower": "^1.0.0",
    "babel-runtime": "^5.8.25",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "cpx": "^1.2.1",
    "exorcist": "^0.4.0",
    "mkdirp": "*",
    "mocha": "^2.2.5",
    "nib": "^1.1.0",
    "npm-run-all": "^1.2.12",
    "power-assert": "^0.11.0",
    "rimraf": "^2.4.3",
    "stylus": "^0.52.0",
    "testem": "*",
    "uglify-js": "^2.4.24",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  },
  "dependencies": {
    "xtend": "^4.0.0"
  }
}
